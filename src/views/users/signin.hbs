<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>Account Login</h3>
            </div>
            <div class="card-body">
                <img src="/img/LOGO.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">
            </div>
            <div class="card-body">
                <form action="/user/signin" method="post">
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" autofocus placeholder="email">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">SignIn</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>